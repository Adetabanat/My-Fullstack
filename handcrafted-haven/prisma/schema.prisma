datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Seller {
  id        Int       @id @default(autoincrement())
  name      String
  location  String?
  story     String?
  banner    String?
  avatar    String?
  createdAt DateTime  @default(now())
  products  Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  image       String?
  createdAt   DateTime @default(now())
  sellerId    Int
  seller      Seller   @relation(fields: [sellerId], references: [id])
}
